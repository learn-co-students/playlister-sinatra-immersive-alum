<h2>Create New Song</h2>


<form action="/songs" method="post">
  <label>Name</label>
  <br></br>

  <input type="text" name="name" id="Name">

  <br></br>

  <label>Genre(s)</label>
  <br></br>
  <%Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"><%=genre.name%></input>
  <%end%>

  <br></br>

  <label>Artist</label>
  <input type="text" name="artist_name" id="Artist Name">
  <br></br>
  <input type="submit" value="Create Song">

</form>
