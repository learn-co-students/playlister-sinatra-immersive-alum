
<h2>Edit Song</h2>


<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Name</label>
  <br></br>
  <input type="text" name="name" id="song[name]" value="<%=@song.name%>">

  <br></br>

  <label>Genre(s)</label>
  <br></br>
  <%Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <%end%>

  <br></br>

  <label>Artist</label>
  <input type="text" name="artist[name]" value="<%=@song.artist.name%>" id="Artist Name">
  <br></br>
  <input type="submit" value="Save">

</form>
